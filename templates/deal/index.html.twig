{% extends 'base.html.twig' %}

{% block title %} {{site.name}} {% endblock %}

{% block body %}
    <h1>Liste des Deals</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
        {% for deal in deals %}
            <tr>
                <td>{{ deal.id }}</td>
                <td>{{ deal.name }}</td>
                <td>{{ deal.description }}</td>
                <td>{{ deal.price }}</td>
                <td>{{ deal.createAt ? deal.createAt|date('m/d/Y') : '' }}</td>
                {# <td>
                    <a href="{{ path('deal_show', {'dealId': deal.id}) }}">View</a>
                </td> #}
            </tr>
        {# {% else %}
            <tr>
                <td colspan="5">No deals found</td>
            </tr> #}
        {% endfor %}
        </tbody>
    </table>
    <h2>{{ slogan }}</h2>
    <h3>Your special discount is: {{ discount }}%</h3>
{% endblock %}